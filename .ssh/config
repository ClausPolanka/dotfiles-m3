# -------- Global defaults --------
Host *
  AddKeysToAgent yes
  UseKeychain yes
  IdentitiesOnly yes
  HashKnownHosts yes
  ServerAliveInterval 60
  ServerAliveCountMax 3

  # Speed-up: reuse SSH connections for subsequent git commands
  ControlMaster auto
  ControlPersist 1h
  ControlPath ~/.ssh/cm-%r@%h:%p

# -------- BeeOne GitHub Enterprise --------
Host github.beeone.at
  HostName github.beeone.at
  User git
  IdentityFile ~/.ssh/id_ed25519_beeone

# -------- Public GitHub --------
Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519_github.com
